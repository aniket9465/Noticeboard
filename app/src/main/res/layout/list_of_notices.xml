<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_of_notices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#5288DA">

                <ImageView
                    android:id="@+id/drawer_opener"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="19dp"
                    android:paddingRight="22dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/navigation_drawer" />
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:paddingLeft="19dp"
                    android:paddingRight="22dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/back_white" />

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:text="All Notices"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toStartOf="@+id/search"
                    app:layout_constraintStart_toEndOf="@+id/drawer_opener"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/search" />
                <ImageView
                    android:id="@+id/filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp"
                    app:layout_constraintEnd_toStartOf="@id/search"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/filter" />


            </android.support.constraint.ConstraintLayout>

            <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/notice_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="focus_change" />


            </android.support.v4.widget.SwipeRefreshLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_below="@id/lay"
                android:id="@+id/filter_menu"
                android:visibility="invisible"
                android:background="#EDF4FF"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/filter_text"
                    android:text="Filters"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:paddingLeft="19dp"
                    android:paddingTop="12dp"
                    />
                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    app:layout_constraintTop_toBottomOf="@+id/filter_text"
                    />
                <android.support.constraint.ConstraintLayout
                    android:layout_width="153dp"
                    android:layout_height="0dp"
                    android:id="@+id/filter_main_category"
                    android:layout_marginBottom="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filter_text">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textSize="14dp"
                        android:textColor="#000"
                        android:layout_marginStart="16dp"
                        android:text="Categories"
                        app:layout_constraintBottom_toTopOf="@+id/view"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:textSize="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/filter_reset"
                        android:textColor="#5288DA"
                        android:layout_marginEnd="8dp"
                        android:text="Reset"
                        app:layout_constraintBottom_toTopOf="@+id/view"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="123dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="54dp"
                        android:background="#000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="114dp"
                        android:orientation="vertical"
                        android:id="@+id/sub_c"
                        app:layout_constraintBottom_toTopOf="@+id/view5"
                        app:layout_constraintStart_toStartOf="parent" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:id="@+id/authority"
                            android:layout_height="36dp"
                            android:background="#fff"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:visibility="invisible"
                                android:layout_height="wrap_content"
                                android:id="@+id/authority_bullet"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="15dp"
                                app:srcCompat="@drawable/blue_check"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="8dp"
                                android:gravity="center"
                                android:text="Authorities"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:id="@+id/departments"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:visibility="invisible"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="15dp"
                                android:id="@+id/departments_bullet"
                                app:srcCompat="@drawable/blue_check"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="8dp"
                                android:gravity="center"
                                android:text="Departments"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:id="@+id/placements"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/placements_bullet"
                                android:visibility="invisible"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="15dp"
                                app:srcCompat="@drawable/blue_check"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="8dp"
                                android:gravity="center"
                                android:text="Placement Office"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:id="@+id/view5"
                        android:layout_width="123dp"
                        android:layout_height="1dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="142dp"
                        android:background="#000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/view" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="#999999"
                        />

                    <TextView
                        android:id="@+id/date_filter_not_set"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:paddingRight="32dp"
                        android:paddingBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Date"
                        android:textColor="#000"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view5" />

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:id="@+id/date_filter_set"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sub_c">

                        <TextView
                            android:id="@+id/starting_date"
                            android:layout_width="wrap_content"
                            android:textColor="#5288DA"
                            android:textSize="12dp"
                            android:layout_height="wrap_content"
                            android:text="11-12-12" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="|"
                            android:textColor="#5288DA"
                            android:paddingBottom="2dp"
                            app:layout_constraintTop_toBottomOf="@id/starting_date"
                            />
                        <TextView
                            android:id="@+id/ending_date"
                            android:textColor="#5288DA"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="12-12-12"
                            app:layout_constraintTop_toBottomOf="@id/starting_date" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reset_date_filter"
                            android:text="Reset Date filter"
                            android:textSize="12dp"
                            android:layout_marginTop="12dp"
                            android:textColor="#999999"
                            app:layout_constraintTop_toBottomOf="@id/ending_date"
                            />

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="#fff"
                    android:layout_marginTop="2px"
                    android:layout_marginBottom="48dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/filter_main_category"
                    app:layout_constraintTop_toBottomOf="@+id/filter_text">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/all_subcategories"
                        android:layout_height="36dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        app:layout_constraintBottom_toTopOf="@id/view6"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/all_subcategories_bullet"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:scaleX="0.5"
                            android:scaleY="0.5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="ALL" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:background="#999999"
                        android:layout_marginTop="54dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ListView
                        android:id="@+id/subfilters"
                        android:layout_width="match_parent"
                        android:layout_height="479dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/view6"
                        app:layout_constraintTop_toTopOf="@id/view6" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#999999"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="153dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="cancelFilters"
                    android:textAlignment="center"
                    android:textColor="#5288DA"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:background="#5288DA"
                    android:gravity="center"
                    android:text="Apply"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="applyFilters"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView" />
            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
           android:id="@+id/nav_complete_menu"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:background="#5288DA">

            </android.support.constraint.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#f3f3f3"
                android:layout_weight="70">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/nav_view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="33dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="33dp"
                            app:srcCompat="@drawable/nav_all_button"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="33dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="33dp"
                            android:text="All Notices"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>



                    <View
                        android:id="@+id/view3"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#000"
                        app:layout_constraintTop_toBottomOf="@+id/nav_all"
                        />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_expired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/view3">

                        <ImageView
                            android:id="@+id/nav_view_expired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="30dp"
                            app:srcCompat="@drawable/nav_expired"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="30dp"
                            android:text="Expired"
                            android:textSize="14dp"
                            android:textColor="#000000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_bookmarks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/nav_expired">

                        <ImageView
                            android:id="@+id/nav_view_bookmarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            app:srcCompat="@drawable/nav_bookmarks"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="16dp"
                            android:textSize="14dp"
                            android:text="Bookmarks"
                            android:textColor="#000000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#000"
                        app:layout_constraintTop_toBottomOf="@+id/nav_bookmarks"
                        />

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_notification_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        >

                        <ImageView
                            android:id="@+id/nav_view_notification_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="30dp"
                            app:srcCompat="@drawable/nav_notification_settings"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="30dp"
                            android:text="Notification settings"
                            android:textColor="#000000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/nav_notification_settings"
                        >

                        <ImageView
                            android:id="@+id/nav_view_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            app:srcCompat="@drawable/nav_feedback"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="16dp"
                            android:text="Feedback"
                            android:textColor="#000000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/nav_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/nav_feedback"
                        >

                        <ImageView
                            android:id="@+id/nav_view_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="16dp"
                            app:srcCompat="@drawable/nav_logout"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="16dp"
                            android:text="Logout"
                            android:textColor="#000000"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>


                </android.support.constraint.ConstraintLayout>
            </ScrollView>
        </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>